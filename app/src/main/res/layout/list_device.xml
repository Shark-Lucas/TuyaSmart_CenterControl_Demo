<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/list_device_scene">

    <TextView
        android:id="@+id/tv_devOnlineState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="state"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tv_devName2"
        app:layout_constraintTop_toTopOf="@+id/tv_devName2" />

    <TextView
        android:id="@+id/tv_devName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线状态："
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_devImg"
        app:layout_constraintStart_toStartOf="@+id/tv_devName" />

    <ImageView
        android:id="@+id/iv_devImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ACACAC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_devName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="name"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/iv_devImg"
        app:layout_constraintTop_toTopOf="@+id/iv_devImg" />

</androidx.constraintlayout.widget.ConstraintLayout>